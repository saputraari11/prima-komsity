    <!-- food -->
    <section class="container food" style="background-image: url(img/food-and-drink/bg.png);">
        <div class="heading1">Find the best 
            food and drink 
            for you</div>   
            <form action="" class="search">
                <div class="group">
                    <i class="icon_search"></i>
                    <input type="text" placeholder="Search">
                </div>
            </form>
            <div class="heading2">
                Menu Category
            </div>
            <div class="c-box">
                <div class="box">
                    <div class="img">
                        <img src="img/food-and-drink/nasi.png" alt="">
                    </div>
                    <div class="title">
                        Aneka Nasi
                    </div>
                </div>
                <div class="box">
                    <div class="img">
                        <img src="img/food-and-drink/nasi.png" alt="">
                    </div>
                    <div class="title">
                        Aneka Nasi
                    </div>
                </div>
                <div class="box">
                    <div class="img">
                        <img src="img/food-and-drink/nasi.png" alt="">
                    </div>
                    <div class="title">
                        Aneka Nasi
                    </div>
                </div>
                <div class="box">
                    <div class="img">
                        <img src="img/food-and-drink/nasi.png" alt="">
                    </div>
                    <div class="title">
                        Aneka Nasi
                    </div>
                </div>
                <div class="box">
                    <div class="img">
                        <img src="img/food-and-drink/nasi.png" alt="">
                    </div>
                    <div class="title">
                        Aneka Nasi
                    </div>
                </div>
            </div>

            <div class="heading1" style="width: 300px; margin-top: 60px;">
                choose food and drink acoording to your tongue
            </div>
            <div class="c-box2">
            <% randomFood.forEach((foodId) => {%>
                <div class="box">
                    <img src="<%= url+data[foodId].id+'/'+data[foodId].image %>" alt="">
                    <div class="title">
                        <%= data[foodId].name %>
                    </div>
                    <div class="price">
                        <%= data[foodId].price %>
                    </div>
                    <div class="btn">
                        <a href="food-detail.html">See Detail</a>
                        <div class="swipe">></div>
                    </div>
                </div>
            <% }) %>
            </div>
            <div class="rekomend">
                <div class="heading1">Rekomended</div>
                <div class="swiper" style="margin-top: 40px;">
                    <% randomRates.forEach((rateId) => {%>
                       <div class="swiper-wrapper">
                        <a href="" class="swiper-slide">
                            <img src="<%= url+ratings[rateId].id+'/'+ratings[rateId].image %>" alt="">
                           <div class="text">
                            <div class="heading2 c-white"><%= ratings[rateId].name %></div>
                            <div class="price">
                                <p><%= ratings[rateId].price %></p>
                                <p><%= ratings[rateId].time_serve %></p>
                            </div>
                           </div>
                            <div class="rating">
                                <i class="icon_star"></i>
                                <%= ratings[rateId].rating %>
                            </div>
                        </a>
                        </div>
                    <% }) %>
                    <div class="swiper-pagination"></div>
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-button-next"></div>
                </div>
            </div>
    </section>

    <!-- footer -->
    <footer class="container c-primary">
